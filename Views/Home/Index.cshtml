@using React.AspNet
@using React.RenderFunctions
@using React.Router
@model React.Sample.Webpack.CoreMvc.Controllers.HomeController.IndexViewModel

@{
    Layout = "_Layout";
    var materialUiFunctions = new MaterialUIFunctions();
    var helmetFunctions = new ReactHelmetFunctions();

    var chainedFunctions = new ChainedRenderFunctions(materialUiFunctions, helmetFunctions);
}
@Html.React("Components.RootComponent", new { }, renderFunctions: chainedFunctions)
@*@Html.ReactRouter("Components.RootComponent", new {}, renderFunctions: chainedFunctions)*@
@{
    ViewBag.ServerStyles = materialUiFunctions.RenderedStyles;
    ViewBag.HelmetTitle = helmetFunctions.RenderedHelmet?.GetValueOrDefault("title");
}
